            "svdFile": "STM32F103.svd",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "serverpath": "C:/VS_Tools/Openocd/bin/openocd.exe",
            "device": "stm32f1x",
//            "interface": "swd"
//            "ipAddress": "",
